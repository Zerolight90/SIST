package pm;

import java.util.Scanner;

public class Ex6_Main {

	public static void main(String[] args) {
		// 프로그램 시작
		int cnt = 0;
		Ex6_Baseball bb = new Ex6_Baseball();

		bb.init(); //함수호출
		
		//키보드로 스캐너 준비
		Scanner scanner = new Scanner(System.in);
		
		bb.getCom();

		do {
			// bb.strike_count = 0;
			// bb.ball_count = 0;
			++cnt;
			System.out.println(cnt + "차:");
			String str = scanner.nextLine();

			bb.setUser(str); // public void setUser(String n) 여기로 반환
			bb.countStrike(); // public int countStrike 여기로 반환
			bb.countBall(); // public int countBall 여기로 반환
			System.out.printf("%dStrike, %dBall\r\n", bb.strike_count, bb.ball_count);
		}

		while (bb.countStrike() != 3);

		System.out.println(cnt + "회차에 성공!");

	}
}
