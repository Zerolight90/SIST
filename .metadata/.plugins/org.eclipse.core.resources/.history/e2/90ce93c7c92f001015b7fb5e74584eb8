package pm;

public class Ex5_Gugudan {
	
	int dan;

	public void setDan(int dan) {
		this.dan = dan;
	}

	public void print() {
		System.out.println(dan+"단");
		System.out.println("===========");
		
		for(int i = 1; i<10; i++) {
			System.out.printf("%dx%d=%d\r\n", dan, i, dan*i);
		}
	}
	
	public String result() {
		//문자열
		StringBuffer sb = new StringBuffer();
		sb.append(dan);
		sb.append("단\r\n");
		sb.append("==============\r\\n");
		
		return sb.toString();
	}// result
	
	
}
